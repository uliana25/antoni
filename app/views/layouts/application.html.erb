<!DOCTYPE html>
<html>
  <head>
    <title>Магазин детских игрушек</title>
    <%= stylesheet_link_tag "application", media: "all",
    "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tag %>
  </head>
  <body class="<%= controller.controller_name %>">
    <div id="banner">
      <%= image_tag("logo.png", size: "50x30") %>
      <%= @page_title || t('layouts.application.title') %>
    </div>
    <div id="columns">
    <div id="side">
      <div id="cart">
          <% if @cart %>
            <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
             <%= render @cart %>
            <% end %>
          <% end%>
      </div>
      <ul>
        <li><%=render 'layouts/types'%></li>
        <li><%=link_to t('layouts.application.home') %></li>
        <li><%=link_to t('layouts.application.questions') %></a></li>
        <li><%=link_to t('layouts.application.news') %></li>
        <li><%=link_to t('layouts.application.contact') %></a></li>
        <% if user_signed_in? %>
        <ul>
          <li><%= link_to 'Orders', orders_path %></li>
          <li><%= link_to 'Products', products_path %></li>
        </ul>
        <%= button_to 'Выйти', destroy_user_session_path, :method => :delete %>
        <%else%>
          <li><%= link_to 'Войти', new_user_session_path%></li>
        <% end %>
      </ul>
    </div>
    <div id="main">
      <%= yield %>
    </div>
    </div>
  </body>
</html>
